<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watchingy.dao.CourseNoteDao">

    <select id="getByCourseId" parameterType="int">
        SELECT * FROM course_note WHERE courseId=#{courseId}
    </select>

    <insert id="add" parameterType="com.watchingy.model.CourseNote">
        INSERT INTO course_note(title,content,create_time) VALUE (#{title},#{content},#{time})
    </insert>
    <delete id="delete" parameterType="com.watchingy.model.CourseNote">
        DELETE FROM course WHERE course_note_id=#{CourseNoteId}
    </delete>
</mapper>