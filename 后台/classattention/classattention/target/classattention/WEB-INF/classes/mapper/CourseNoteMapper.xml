<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watchingy.dao.CourseNoteDao">

    <select id="getByCourseId" resultType="com.watchingy.model.CourseNote">
        SELECT * FROM course_note WHERE course_id=#{courseId}
    </select>

    <insert id="add" parameterType="com.watchingy.model.CourseNote">
        INSERT INTO course_note(course_id,title,content,create_time) VALUE (#{courseId},#{title},#{content},#{createTime})
    </insert>
    <delete id="delete" parameterType="com.watchingy.model.CourseNote">
        DELETE FROM course_note WHERE course_note_id=#{courseNoteId}
    </delete>
</mapper>